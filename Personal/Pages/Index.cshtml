@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-orb hero-orb-1"></div>
    <div class="hero-orb hero-orb-2"></div>
    <div class="hero-orb hero-orb-3"></div>

    <div class="hero-badge">
        <span class="hero-badge-dot"></span>
        Personal Effect &amp; Style Collection
    </div>

    <h1 class="hero-title">
        <span class="gradient-text">Style Lab</span>
    </h1>

    <p class="hero-subtitle">
        A curated collection of stunning CSS effects, animations, and UI patterns —
        ready to preview, copy, and drop into any project.
    </p>

    <div class="hero-cta">
        <a href="/Showcase/Buttons" class="btn-primary-glow">
            Explore Effects &rarr;
        </a>
        <a href="#categories" class="btn-ghost">
            Browse Collection
        </a>
    </div>

    <div class="hero-scroll-indicator">
        <span>Scroll</span>
        <div class="scroll-arrow"></div>
    </div>
</section>

<!-- Stats -->
<div class="stats-bar">
    <div class="stat-item reveal">
        <div class="stat-number">30+</div>
        <div class="stat-label">Effects</div>
    </div>
    <div class="stat-item reveal reveal-delay-1">
        <div class="stat-number">7</div>
        <div class="stat-label">Categories</div>
    </div>
    <div class="stat-item reveal reveal-delay-2">
        <div class="stat-number">CSS</div>
        <div class="stat-label">Pure</div>
    </div>
    <div class="stat-item reveal reveal-delay-3">
        <div class="stat-number">0</div>
        <div class="stat-label">Dependencies</div>
    </div>
</div>

<!-- Categories -->
<section class="categories-section" id="categories">
    <div class="section-header reveal">
        <div class="section-tag">Collection</div>
        <h2 class="section-title">Browse by Category</h2>
        <p class="section-subtitle">
            Each category contains live previews with copy-ready code snippets.
        </p>
    </div>

    <div class="category-grid">
        <a class="category-card reveal reveal-delay-1" href="/Showcase/Buttons">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><rect x="4" y="8" width="16" height="8" rx="4"/></svg></span>
            <h3 class="category-title">Buttons</h3>
            <p class="category-desc">Neon glows, gradient shifts, ripple effects, and magnetic interactions.</p>
            <span class="category-count">4 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-2" href="/Showcase/Cards">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><rect x="3" y="5" width="18" height="14" rx="3"/></svg></span>
            <h3 class="category-title">Cards</h3>
            <p class="category-desc">Glassmorphism, 3D tilt, spotlight tracking, animated gradient borders, and deep sea water effects.</p>
            <span class="category-count">6 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-3" href="/Showcase/TextEffects">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M4 7V4h16v3M9 20h6M12 4v16"/></svg></span>
            <h3 class="category-title">Text Effects</h3>
            <p class="category-desc">Animated gradients, glitch distortion, typewriter animation, neon sign glow, and liquid water fills.</p>
            <span class="category-count">6 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-4" href="/Showcase/ScrollEffects">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M12 5v14M5 12l7 7 7-7"/></svg></span>
            <h3 class="category-title">Scroll Effects</h3>
            <p class="category-desc">Fade rise, slide in, scale pop, blur unveil, stagger cascade, clip reveals, 3D flips, elastic bounce, rubber band, and more.</p>
            <span class="category-count">15 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-5" href="/Showcase/Loaders">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"/></svg></span>
            <h3 class="category-title">Loaders</h3>
            <p class="category-desc">Orbit spinners, morphing dots, skeleton placeholders, morph loaders, wave bars, 3D cubes, radar sweeps, and more.</p>
            <span class="category-count">11 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-6" href="/Showcase/Canvas3D">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg></span>
            <h3 class="category-title">3D Canvas</h3>
            <p class="category-desc">Particle nebulae, wave terrain, geometric vortex, particle burst, starfield warp, black hole, matrix rain, reactive smoke &amp; more — pure JS.</p>
            <span class="category-count">15 effects</span>
        </a>

        <a class="category-card reveal reveal-delay-7" href="/Showcase/LandingPages">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M15 11l-3-3m0 0l-3 3m3-3v8M4 4h16v16H4z"/></svg></span>
            <h3 class="category-title">Landing Pages</h3>
            <p class="category-desc">Full-screen immersive hero backgrounds — hyperspeed highways, WebGL shaders, galaxy starfields, and cinematic presets.</p>
            <span class="category-count">7 presets</span>
        </a>

        <a class="category-card reveal reveal-delay-8" href="/Showcase/Playground">
            <span class="category-arrow">&nearr;</span>
            <span class="category-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M8 9l3 3-3 3m5 0h3M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2z"/></svg></span>
            <h3 class="category-title">Playground</h3>
            <p class="category-desc">Pick any effect from any section — edit HTML, CSS &amp; JS live and see instant results.</p>
            <span class="category-count">59 effects</span>
        </a>
    </div>
</section>

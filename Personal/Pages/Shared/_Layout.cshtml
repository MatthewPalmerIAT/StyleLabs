<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Style Lab</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Prism.js Syntax Highlighting -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Hamburger Toggle -->
    <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar Navigation -->
    <nav class="sidebar-nav" id="sidebarNav">
        <div class="sidebar-header">
            <a class="sidebar-logo" asp-page="/Index">
                <span class="sidebar-logo-icon">/</span> Style Lab
            </a>
        </div>
        <ul class="sidebar-links">
            <li><a asp-page="/Index"><i class="fas fa-home"></i><span>Home</span></a></li>
            <li><a asp-page="/Showcase/Buttons"><i class="fas fa-hand-pointer"></i><span>Buttons</span></a></li>
            <li><a asp-page="/Showcase/Cards"><i class="fas fa-id-card"></i><span>Cards</span></a></li>
            <li><a asp-page="/Showcase/TextEffects"><i class="fas fa-font"></i><span>Text Effects</span></a></li>
            <li><a asp-page="/Showcase/ScrollEffects"><i class="fas fa-scroll"></i><span>Scroll Effects</span></a></li>
            <li><a asp-page="/Showcase/Loaders"><i class="fas fa-spinner"></i><span>Loaders</span></a></li>
            <li><a asp-page="/Showcase/Parallax"><i class="fas fa-layer-group"></i><span>Parallax</span></a></li>
            <li><a asp-page="/Showcase/Canvas3D"><i class="fas fa-cube"></i><span>3D Canvas</span></a></li>
            <li><a asp-page="/Showcase/LandingPages"><i class="fas fa-rocket"></i><span>Landing Pages</span></a></li>
            <li><a asp-page="/Showcase/Playground"><i class="fas fa-flask"></i><span>Playground</span></a></li>
        </ul>
        <div class="sidebar-footer">
            <p>&copy; @DateTime.Now.Year Style Lab</p>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()

        <footer class="site-footer">
            <p>&copy; @DateTime.Now.Year Style Lab — A personal collection of effects &amp; styles</p>
        </footer>
    </div>

    <!-- Prism.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-css.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-javascript.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

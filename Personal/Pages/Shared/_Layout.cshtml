<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — Style Lab</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- Prism.js Syntax Highlighting -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation -->
    <nav class="nav-glass">
        <div class="nav-inner">
            <a class="nav-logo" asp-page="/Index">
                <span class="nav-logo-icon">/</span> Style Lab
            </a>
            <button class="nav-hamburger" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <ul class="nav-links">
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/Showcase/Buttons">Buttons</a></li>
                <li><a asp-page="/Showcase/Cards">Cards</a></li>
                <li><a asp-page="/Showcase/TextEffects">Text Effects</a></li>
                <li><a asp-page="/Showcase/ScrollEffects">Scroll Effects</a></li>
                <li><a asp-page="/Showcase/Loaders">Loaders</a></li>
                <li><a asp-page="/Showcase/Parallax">Parallax</a></li>
                <li><a asp-page="/Showcase/Canvas3D">3D Canvas</a></li>
                <li><a asp-page="/Showcase/Playground">Playground</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()

        <footer class="site-footer">
            <p>&copy; @DateTime.Now.Year Style Lab — A personal collection of effects &amp; styles</p>
        </footer>
    </div>

    <!-- Prism.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-css.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-markup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-javascript.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

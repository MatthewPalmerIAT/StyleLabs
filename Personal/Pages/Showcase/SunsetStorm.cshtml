@page
@model Personal.Pages.Showcase.SunsetStormModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sunset Storm — Style Lab</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <style>
        *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
        html, body { width: 100%; height: 100%; overflow: hidden; font-family: 'Inter', sans-serif; background: #000; }

        .hero-container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            background: #000;
        }

        #heroCanvas {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            touch-action: none;
            background: #000;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-align: center;
            padding: 20px;
            pointer-events: none;
        }

        .hero-content {
            max-width: 900px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 6px;
        }

        .hero-title {
            font-size: clamp(2.8rem, 7vw, 5.5rem);
            font-weight: 800;
            margin: 0;
            line-height: 1.08;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .gradient-one {
            background-image: linear-gradient(90deg, #fdba74, #facc15, #fcd34d);
        }
        .gradient-two {
            background-image: linear-gradient(90deg, #fde047, #fb923c, #f87171);
        }

        .hero-subtitle {
            font-size: clamp(1rem, 2vw, 1.35rem);
            margin-top: 18px;
            color: rgba(255, 237, 213, 0.88);
            max-width: 680px;
            line-height: 1.65;
            font-weight: 300;
        }

        .hero-buttons {
            margin-top: 36px;
            display: flex;
            gap: 16px;
            justify-content: center;
            flex-wrap: wrap;
            pointer-events: auto;
        }

        .btn-primary {
            padding: 15px 34px;
            background: linear-gradient(90deg, #f97316, #eab308);
            color: #000;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .btn-primary:hover {
            transform: scale(1.06);
            box-shadow: 0 0 35px rgba(249, 115, 22, 0.35);
        }

        .btn-secondary {
            padding: 15px 34px;
            background: rgba(249, 115, 22, 0.08);
            border: 1px solid rgba(253, 186, 116, 0.3);
            color: #fff1e6;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            font-family: inherit;
            backdrop-filter: blur(8px);
            transition: all 0.3s;
            pointer-events: auto;
        }
        .btn-secondary:hover {
            background: rgba(249, 115, 22, 0.18);
            border-color: rgba(253, 186, 116, 0.55);
        }

        /* Animations */
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(35px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @@keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-22px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in-up { animation: fadeInUp 0.8s ease-out forwards; opacity: 0; }
        .fade-in-down { animation: fadeInDown 0.8s ease-out forwards; opacity: 0; }
        .delay-200 { animation-delay: 0.2s; }
        .delay-400 { animation-delay: 0.4s; }
        .delay-600 { animation-delay: 0.6s; }
        .delay-800 { animation-delay: 0.8s; }

        /* Back button */
        .ss-back {
            position: fixed; top: 1.25rem; left: 1.25rem; z-index: 20;
            display: inline-flex; align-items: center; gap: 0.5rem;
            padding: 0.55rem 1.1rem; border-radius: 99px;
            background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);
            color: rgba(255,255,255,0.65); font-size: 0.85rem; font-weight: 600;
            text-decoration: none; backdrop-filter: blur(12px); transition: all 0.25s ease;
        }
        .ss-back:hover { background: rgba(249,115,22,0.12); border-color: rgba(249,115,22,0.35); color: #fdba74; }
        .ss-back svg { width: 16px; height: 16px; }

        @@media (max-width: 768px) {
            .hero-title { line-height: 1.12; }
            .hero-subtitle { font-size: 1rem; }
            .hero-buttons { flex-direction: column; align-items: center; }
        }
    </style>
</head>
<body>
    <a class="ss-back" href="/Showcase/LandingPages">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/></svg>
        Back
    </a>

    <section class="hero-container">
        <canvas id="heroCanvas"></canvas>

        <div class="hero-overlay">
            <div class="hero-content">
                <h1 class="hero-title gradient-one fade-in-up delay-200">Launch Your</h1>
                <h1 class="hero-title gradient-two fade-in-up delay-400">Workflow Into Orbit</h1>

                <p class="hero-subtitle fade-in-up delay-600">
                    Supercharge productivity with AI-powered automation and integrations
                    built for the next generation of teams — fast, seamless, and limitless.
                </p>

                <div class="hero-buttons fade-in-up delay-800">
                    <a href="#" class="btn-primary" onclick="return false;">Get Started for Free</a>
                    <button class="btn-secondary" onclick="void(0)">Explore Features</button>
                </div>
            </div>
        </div>
    </section>

    <script>
    (function () {
        const canvas = document.getElementById('heroCanvas');
        const gl = canvas.getContext('webgl2');
        if (!gl) return;

        // ---- Shader sources ----
        const vertexSrc = `#version 300 es
precision highp float;
in vec4 position;
void main() { gl_Position = position; }`;

        const fragmentSrc = `#version 300 es
/*********
* made by Matthias Hurrle (@@atzedent)
*/
precision highp float;
out vec4 O;
uniform vec2 resolution;
uniform float time;
uniform vec2 move;
uniform vec2 touch;
uniform int pointerCount;

#define FC gl_FragCoord.xy
#define T time
#define R resolution
#define MN min(R.x, R.y)

float rnd(vec2 p) {
    p = fract(p * vec2(12.9898, 78.233));
    p += dot(p, p + 34.56);
    return fract(p.x * p.y);
}

float noise(in vec2 p) {
    vec2 i = floor(p), f = fract(p), u = f * f * (3.0 - 2.0 * f);
    float
        a = rnd(i),
        b = rnd(i + vec2(1, 0)),
        c = rnd(i + vec2(0, 1)),
        d = rnd(i + 1.0);
    return mix(mix(a, b, u.x), mix(c, d, u.x), u.y);
}

float fbm(vec2 p) {
    float t = 0.0, a = 1.0;
    mat2 m = mat2(1.0, -0.5, 0.2, 1.2);
    for (int i = 0; i < 5; i++) {
        t += a * noise(p);
        p *= 2.0 * m;
        a *= 0.5;
    }
    return t;
}

float clouds(vec2 p) {
    float d = 1.0, t = 0.0;
    for (float i = 0.0; i < 3.0; i++) {
        float a = d * fbm(i * 10.0 + p.x * 0.2 + 0.2 * (1.0 + i) * p.y + d + i * i + p);
        t = mix(t, d, a);
        d = a;
        p *= 2.0 / (i + 1.0);
    }
    return t;
}

void main(void) {
    vec2 uv = (FC - 0.5 * R) / MN, st = uv * vec2(2, 1);
    vec3 col = vec3(0);
    float bg = clouds(vec2(st.x + T * 0.5, -st.y));

    uv *= 1.0 - 0.3 * (sin(T * 0.2) * 0.5 + 0.5);

    for (float i = 1.0; i < 12.0; i++) {
        uv += 0.1 * cos(i * vec2(0.1 + 0.01 * i, 0.8) + i * i + T * 0.5 + 0.1 * uv.x);
        vec2 p = uv;
        float d = length(p);
        col += 0.00125 / d * (cos(sin(i) * vec3(1, 2, 3)) + 1.0);
        float b = noise(i + p + bg * 1.731);
        col += 0.002 * b / length(max(p, vec2(b * p.x * 0.02, p.y)));
        col = mix(col, vec3(bg * 0.25, bg * 0.137, bg * 0.05), d);
    }

    O = vec4(col, 1);
}`;

        // ---- Compile & link ----
        function compile(type, source) {
            const shader = gl.createShader(type);
            gl.shaderSource(shader, source);
            gl.compileShader(shader);
            if (!gl.getShaderParameter(shader, gl.COMPILE_STATUS)) {
                console.error('Shader error:', gl.getShaderInfoLog(shader));
            }
            return shader;
        }

        const vs = compile(gl.VERTEX_SHADER, vertexSrc);
        const fs = compile(gl.FRAGMENT_SHADER, fragmentSrc);

        const program = gl.createProgram();
        gl.attachShader(program, vs);
        gl.attachShader(program, fs);
        gl.linkProgram(program);
        if (!gl.getProgramParameter(program, gl.LINK_STATUS)) {
            console.error('Link error:', gl.getProgramInfoLog(program));
        }
        gl.useProgram(program);

        // ---- Geometry ----
        const buffer = gl.createBuffer();
        gl.bindBuffer(gl.ARRAY_BUFFER, buffer);
        gl.bufferData(gl.ARRAY_BUFFER, new Float32Array([-1, 1, -1, -1, 1, 1, 1, -1]), gl.STATIC_DRAW);

        const position = gl.getAttribLocation(program, 'position');
        gl.enableVertexAttribArray(position);
        gl.vertexAttribPointer(position, 2, gl.FLOAT, false, 0, 0);

        // ---- Uniforms ----
        const resolutionLoc = gl.getUniformLocation(program, 'resolution');
        const timeLoc = gl.getUniformLocation(program, 'time');
        const moveLoc = gl.getUniformLocation(program, 'move');
        const touchLoc = gl.getUniformLocation(program, 'touch');
        const pointerCountLoc = gl.getUniformLocation(program, 'pointerCount');

        // ---- Pointer tracking ----
        let mouseMove = [0, 0];
        let mouseCoords = [0, 0];
        let pointerActive = false;
        let pointerCount = 0;

        function mapCoords(x, y) {
            const dpr = Math.max(1, 0.5 * window.devicePixelRatio);
            return [x * dpr, canvas.height - y * dpr];
        }

        canvas.addEventListener('pointerdown', function (e) {
            pointerActive = true;
            pointerCount = 1;
            mouseCoords = mapCoords(e.clientX, e.clientY);
        });
        canvas.addEventListener('pointerup', function () {
            pointerActive = false;
            pointerCount = 0;
        });
        canvas.addEventListener('pointerleave', function () {
            pointerActive = false;
            pointerCount = 0;
        });
        canvas.addEventListener('pointermove', function (e) {
            if (!pointerActive) return;
            mouseCoords = mapCoords(e.clientX, e.clientY);
            mouseMove[0] += e.movementX;
            mouseMove[1] += e.movementY;
        });

        // ---- Resize ----
        function resize() {
            const dpr = Math.max(1, 0.5 * window.devicePixelRatio);
            canvas.width = window.innerWidth * dpr;
            canvas.height = window.innerHeight * dpr;
            gl.viewport(0, 0, canvas.width, canvas.height);
        }
        window.addEventListener('resize', resize);
        resize();

        // ---- Render loop ----
        function render(now) {
            gl.clearColor(0, 0, 0, 1);
            gl.clear(gl.COLOR_BUFFER_BIT);
            gl.useProgram(program);
            gl.bindBuffer(gl.ARRAY_BUFFER, buffer);

            gl.uniform2f(resolutionLoc, canvas.width, canvas.height);
            gl.uniform1f(timeLoc, now * 0.001);
            gl.uniform2f(moveLoc, mouseMove[0], mouseMove[1]);
            gl.uniform2f(touchLoc, mouseCoords[0], mouseCoords[1]);
            gl.uniform1i(pointerCountLoc, pointerCount);

            gl.drawArrays(gl.TRIANGLE_STRIP, 0, 4);
            requestAnimationFrame(render);
        }
        requestAnimationFrame(render);
    })();
    </script>
</body>
</html>

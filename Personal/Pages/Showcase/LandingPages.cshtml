      * vec2(uResolution.x / uResolution.y, 1.0);
    uv = vec2(
      uPillarRotCos * uv.x - uPillarRotSin * uv.y,
      uPillarRotSin * uv.x + uPillarRotCos * uv.y);

    vec3 ro = vec3(0.0, 0.0, -10.0);
    vec3 rd = normalize(vec3(uv, 1.0));
    vec3 col = vec3(0.0);
    float t = 0.1;

    for (int i = 0; i &lt; MAX_ITER; i++) {
      vec3 p = ro + rd * t;
      p.xz = vec2(
        uRotCos * p.x - uRotSin * p.z,
        uRotSin * p.x + uRotCos * p.z);

      vec3 q = p;
      q.y = p.y * 0.4 + uTime;
      float freq = 1.0, amp = 1.0;

      for (int j = 0; j &lt; WAVE_ITER; j++) {
        q.xz = vec2(
          uWaveCos*q.x - uWaveSin*q.z,
          uWaveSin*q.x + uWaveCos*q.z);

  uniform vec2 uResolution;
  uniform vec3 uTopColor;     // #5227FF
  uniform vec3 uBottomColor;  // #FF9FFC
  uniform float uRotCos, uRotSin;
  uniform float uPillarRotCos, uPillarRotSin;
  uniform float uWaveSin, uWaveCos;
  varying vec2 vUv;

  const int MAX_ITER = 80;
  const int WAVE_ITER = 4;


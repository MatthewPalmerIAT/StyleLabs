  middleWavePosition: { value:
    new Vector3(5,0,0.2) },
  bottomWavePosition: { value:
    new Vector3(2,-0.7,0.4) },
  iMouse:       { value: new Vector2(-1e3,-1e3) },
  interactive:  { value: true },
  bendRadius:   { value: 5.0 },
  bendStrength: { value: -0.5 },
  bendInfluence:{ value: 0 },
  parallax:       { value: true },
  parallaxOffset: { value: new Vector2(0,0) }
};

const mat = new ShaderMaterial(
  { uniforms, vertexShader, fragmentShader });
scene.add(new Mesh(new PlaneGeometry(2,2), mat));

const clock = new Clock();
const tMouse = new Vector2(-1e3,-1e3);
const cMouse = new Vector2(-1e3,-1e3);
let tInf = 0, cInf = 0;
const tPar = new Vector2(), cPar = new Vector2();
const damp = 0.05;

renderer.domElement.addEventListener(
  'pointermove', e =&gt; {
  const r = renderer.domElement
    .getBoundingClientRect();
  const dpr = renderer.getPixelRatio();
  tMouse.set(
    (e.clientX-r.left)*dpr,
    (r.height-(e.clientY-r.top))*dpr);
  tInf = 1;
  tPar.set(
    ((e.clientX-r.left)-r.width/2)/r.width*0.2,
   -((e.clientY-r.top)-r.height/2)/r.height*0.2);
});
renderer.domElement.addEventListener(
  'pointerleave', () =&gt; { tInf = 0; });

(function loop() {
  uniforms.iTime.value = clock.getElapsedTime();
  cMouse.lerp(tMouse, damp);
  uniforms.iMouse.value.copy(cMouse);
  cInf += (tInf - cInf) * damp;
  uniforms.bendInfluence.value = cInf;
  cPar.lerp(tPar, damp);
  uniforms.parallaxOffset.value.copy(cPar);
  renderer.render(scene, camera);
  requestAnimationFrame(loop);
})();

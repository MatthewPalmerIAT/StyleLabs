  content: '';
  position: absolute;
  left: -20%; width: 140%; height: 18px;
  bottom: -18px;
  background: radial-gradient(
    ellipse, rgba(0,200,255,0.7) 0%,
    transparent 70%);
  border-radius: 50%;
  transition: bottom 0.6s ease;
  animation: waterWave 2s ease-in-out infinite;
  z-index: 1;
}
.btn-liquid:hover {
  color: #fff;
  border-color: rgba(0,180,255,0.7);
}
.btn-liquid:hover::before { height: 100%; }
.btn-liquid:hover::after  { bottom: calc(100% - 10px); }
.btn-liquid-text {
  position: relative; z-index: 2;
}

@@keyframes waterWave {
  0%,100% { transform: translateX(0) scaleY(1); }
  50% { transform: translateX(8px) scaleY(1.4); }

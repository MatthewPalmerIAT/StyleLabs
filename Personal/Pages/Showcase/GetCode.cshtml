@page
@model Personal.Pages.Showcase.GetCodeModel
@{
    ViewData["Title"] = $"{Model.ComponentTitle} â€” Get Code";
}

<div class="showcase-page">
    <div class="getcode-header">
        <a href="/Showcase/@Model.Category" class="getcode-back">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/></svg>
            Back to @Model.Category
        </a>
        <h1>@Model.ComponentTitle</h1>
        <span class="getcode-badge">@Model.BadgeText</span>
    </div>

    <div class="getcode-layout">
        <!-- Live Preview -->
        <div class="getcode-preview-card">
            <div class="getcode-preview-label">
                <span class="getcode-dot"></span> Live Preview
            </div>
            <div class="getcode-preview-area" id="preview-area">
                @Html.Raw(Model.PreviewHtml)
            </div>
        </div>

        <!-- Code Sections -->
        @if (Model.CodeSections.Count > 1)
        {
            <div class="getcode-tabs" role="tablist">
                @for (var i = 0; i < Model.CodeSections.Count; i++)
                {
                    <button class="getcode-tab @(i == 0 ? "active" : "")"
                            role="tab"
                            data-tab="@i"
                            onclick="switchTab(this, @i)">
                        @Model.CodeSections[i].Label
                    </button>
                }
            </div>
        }

        @for (var i = 0; i < Model.CodeSections.Count; i++)
        {
            var codeBlock = Model.CodeSections[i];
            <div class="getcode-code-card @(i == 0 ? "" : "hidden")" data-panel="@i">
                <div class="getcode-code-header">
                    <span class="getcode-code-lang">@codeBlock.Label</span>
                    <button class="copy-btn" onclick="copyGetCode(this)">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5" /></svg>
                        <span class="copy-text">Copy</span>
                    </button>
                </div>
                <pre><code class="language-@codeBlock.Lang">@codeBlock.Content</code></pre>
            </div>
        }
    </div>
</div>

<style>
    .getcode-header {
        padding: 2rem 0 2.5rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
    }
    .getcode-back {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-muted, rgba(255,255,255,0.4));
        text-decoration: none;
        text-transform: capitalize;
        transition: color 0.2s;
    }
    .getcode-back:hover {
        color: var(--accent-cyan, #00e5ff);
    }
    .getcode-header h1 {
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 800;
        letter-spacing: -0.02em;
        margin: 0;
        background: linear-gradient(135deg, #fff 30%, var(--accent-cyan, #00e5ff) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .getcode-badge {
        font-size: 0.65rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 99px;
        background: rgba(0,229,255,0.1);
        color: var(--accent-cyan, #00e5ff);
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .getcode-layout {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .getcode-preview-card {
        background: var(--glass-bg, rgba(255,255,255,0.03));
        border: 1px solid var(--glass-border, rgba(255,255,255,0.06));
        border-radius: 16px;
        overflow: hidden;
    }
    .getcode-preview-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-muted, rgba(255,255,255,0.4));
        text-transform: uppercase;
        letter-spacing: 0.08em;
        border-bottom: 1px solid var(--glass-border, rgba(255,255,255,0.06));
    }
    .getcode-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #34d399;
        box-shadow: 0 0 6px rgba(52,211,153,0.5);
    }
    .getcode-preview-area {
        padding: 3rem 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 200px;
    }

    .getcode-code-card {
        background: rgba(0,0,0,0.3);
        border: 1px solid var(--glass-border, rgba(255,255,255,0.06));
        border-radius: 16px;
        overflow: hidden;
    }
    .getcode-code-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1.25rem;
        border-bottom: 1px solid rgba(255,255,255,0.04);
    }
    .getcode-code-lang {
        font-family: var(--font-mono, monospace);
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--text-muted, rgba(255,255,255,0.4));
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .getcode-tabs {
        display: flex;
        gap: 0.25rem;
        padding: 0.25rem;
        background: rgba(255,255,255,0.03);
        border: 1px solid var(--glass-border, rgba(255,255,255,0.06));
        border-radius: 12px;
        width: fit-content;
    }
    .getcode-tab {
        padding: 0.5rem 1.25rem;
        font-family: var(--font-mono, monospace);
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-muted, rgba(255,255,255,0.4));
        background: transparent;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
        letter-spacing: 0.05em;
    }
    .getcode-tab:hover {
        color: var(--text-secondary, rgba(255,255,255,0.7));
        background: rgba(255,255,255,0.04);
    }
    .getcode-tab.active {
        color: var(--accent-cyan, #00e5ff);
        background: rgba(0,229,255,0.08);
    }
    .getcode-code-card.hidden {
        display: none;
    }
</style>

<script>
    function switchTab(btn, index) {
        document.querySelectorAll('.getcode-tab').forEach(t => t.classList.remove('active'));
        btn.classList.add('active');
        document.querySelectorAll('.getcode-code-card').forEach(p => p.classList.add('hidden'));
        document.querySelector('[data-panel="' + index + '"]').classList.remove('hidden');
    }

    function copyGetCode(button) {
        const card = button.closest('.getcode-code-card');
        const codeBlock = card.querySelector('code');
        const text = codeBlock.textContent;

        navigator.clipboard.writeText(text).then(() => {
            button.classList.add('copied');
            const textEl = button.querySelector('.copy-text');
            const original = textEl.textContent;
            textEl.textContent = 'Copied!';

            setTimeout(() => {
                button.classList.remove('copied');
                textEl.textContent = original;
            }, 2000);
        });
    }
</script>

    <!-- Bottom Switcher -->
    <div class="switcher">
        <button class="sw-btn active" data-target="left" type="button">Left</button>
        <button class="sw-btn" data-target="right" type="button">Right</button>
    </div>

    <script>
    (function () {
        const DATA = {
            left: {
                label: 'Left Earbud',
                title: 'Spatial Anchor',
                desc: 'The primary node for binaural synchronization. Handles low-latency transmission and anchors the spatial audio soundstage.',
                image: 'https://ik.imagekit.io/kqmrslzuq/SOUND/left-earbud.png',
                status: 'Connected',
                battery: 82,
                f1: { name: 'Latency', value: 12, icon: 'zap' },
                f2: { name: 'Sync Rate', value: 98, icon: 'wifi' },
                heroBadge: 'Spatial Audio Technology',
                heroAccent: 'Hear Every Dimension.',
                heroDesc: 'Dual-driver architecture with independent spatial calibration. Each earbud is a precision instrument — switch between them to explore.'
            },
            right: {
                label: 'Right Earbud',
                title: 'Vocal Clarity',
                desc: 'Optimized for high-frequency detail and voice pickup. Contains the beamforming microphone array for crystal clear calls.',
                image: 'https://ik.imagekit.io/kqmrslzuq/SOUND/right-earbud.png',
                status: 'Connected',
                battery: 74,
                f1: { name: 'Bitrate', value: 94, icon: 'bluetooth' },
                f2: { name: 'Clarifier', value: 88, icon: 'music' },
                heroBadge: 'Voice Clarity Engine',
                heroAccent: 'Crystal Clear Calls.',
                heroDesc: 'Beamforming microphone array with AI noise cancellation. Optimized for voice isolation in any environment.'
            }
        };

        const ICONS = {
            zap: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"/></svg>',
            wifi: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z"/></svg>',
            bluetooth: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M7 7l10 10-5 5V2l5 5L7 17"/></svg>',
            music: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/></svg>'
        };

        let current = 'left';
        const body = document.body;
        const img = document.getElementById('product-img');
        const buttons = document.querySelectorAll('.sw-btn');

        function switchSide(side) {
            if (side === current) return;
            current = side;
            const d = DATA[side];

            // Flip body data attribute (drives all CSS transitions)
            body.setAttribute('data-side', side);

            // Update switcher buttons
            buttons.forEach(b => b.classList.toggle('active', b.dataset.target === side));

            // Animate image out then in
            img.classList.add('img-entering');
            setTimeout(() => {
                img.src = d.image;
                img.alt = d.label;
                setTimeout(() => img.classList.remove('img-entering'), 30);
            }, 300);

            // Update text with staggered fade
            const els = [
                { el: document.getElementById('detail-label'), val: d.label },
                { el: document.getElementById('detail-title'), val: d.title },
                { el: document.getElementById('detail-desc'), val: d.desc },
            ];
            els.forEach((item, i) => {
                item.el.style.opacity = '0';
                item.el.style.transform = 'translateY(12px)';
                item.el.style.filter = 'blur(6px)';
                setTimeout(() => {
                    item.el.textContent = item.val;
                    item.el.style.transition = 'opacity 0.5s, transform 0.5s, filter 0.5s';
                    item.el.style.opacity = '1';
                    item.el.style.transform = 'translateY(0)';
                    item.el.style.filter = 'blur(0)';
                }, 200 + i * 80);
            });

            // Update feature icons + labels
            setTimeout(() => {
                document.getElementById('f1-label').innerHTML = ICONS[d.f1.icon] + '<span id="f1-name">' + d.f1.name + '</span>';
                document.getElementById('f1-value').textContent = d.f1.value + '%';
                document.getElementById('f2-label').innerHTML = ICONS[d.f2.icon] + '<span id="f2-name">' + d.f2.name + '</span>';
                document.getElementById('f2-value').textContent = d.f2.value + '%';
            }, 250);

            // Animate bars
            document.getElementById('f1-fill').style.width = '0';
            document.getElementById('f2-fill').style.width = '0';
            setTimeout(() => {
                document.getElementById('f1-fill').style.width = d.f1.value + '%';
            }, 500);
            setTimeout(() => {
                document.getElementById('f2-fill').style.width = d.f2.value + '%';
            }, 650);

            // Battery + status
            document.getElementById('status-text').textContent = d.status;

            // Update hero section
            var heroEls = [
                { el: document.getElementById('hero-badge-text'), val: d.heroBadge },
                { el: document.getElementById('hero-heading-accent'), val: d.heroAccent },
                { el: document.getElementById('hero-desc'), val: d.heroDesc },
            ];
            heroEls.forEach(function(item, i) {
                item.el.style.opacity = '0';
                item.el.style.transform = 'translateY(8px)';
                setTimeout(function() {
                    item.el.textContent = item.val;
                    item.el.style.transition = 'opacity 0.5s, transform 0.5s';
                    item.el.style.opacity = '1';
                    item.el.style.transform = 'translateY(0)';
                }, 150 + i * 80);
            });
        }

        // Bind switcher clicks
        buttons.forEach(b => b.addEventListener('click', () => switchSide(b.dataset.target)));

        // Initial bar animation
        setTimeout(() => {
            const d = DATA.left;
            document.getElementById('f1-fill').style.width = d.f1.value + '%';
            setTimeout(() => {
                document.getElementById('f2-fill').style.width = d.f2.value + '%';
            }, 150);
        }, 400);
    })();
    </script>

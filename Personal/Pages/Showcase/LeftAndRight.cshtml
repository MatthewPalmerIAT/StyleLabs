@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Left &amp; Right — Style Lab</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <style>
        *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
        html, body { width: 100%; height: 100%; overflow: hidden; font-family: 'Inter', sans-serif; background: #000; color: #e4e4e7; }

        /* Back button */
        .lr-back {
            position: fixed; top: 1.25rem; left: 1.25rem; z-index: 60;
            display: inline-flex; align-items: center; gap: 0.5rem;
            padding: 0.55rem 1.1rem; border-radius: 99px;
            background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);
            color: rgba(255,255,255,0.6); font-size: 0.85rem; font-weight: 600;
            text-decoration: none; backdrop-filter: blur(12px); transition: all 0.25s ease;
        }
        .lr-back:hover { background: rgba(255,255,255,0.1); color: #fff; }
        .lr-back svg { width: 16px; height: 16px; }

        /* Background gradient */
        .bg-glow {
            position: fixed; inset: 0; pointer-events: none; z-index: 0;
            transition: background 1.2s cubic-bezier(0.16, 1, 0.3, 1);
        }
        [data-side="left"] .bg-glow {
            background:
                radial-gradient(circle at 0% 50%, rgba(59,130,246,0.18), transparent 50%),
                radial-gradient(circle at 50% 0%, rgba(59,130,246,0.06), transparent 40%);
        }
        [data-side="right"] .bg-glow {
            background:
                radial-gradient(circle at 100% 50%, rgba(16,185,129,0.18), transparent 50%),
                radial-gradient(circle at 50% 0%, rgba(16,185,129,0.06), transparent 40%);
        }

        /* ===== Top nav bar ===== */
        .lr-nav {
            position: fixed; top: 0; left: 0; right: 0; z-index: 50;
            display: flex; align-items: center; justify-content: space-between;
            padding: 1.2rem 3rem;
            background: rgba(0,0,0,0.4); backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255,255,255,0.04);
        }
        .lr-brand {
            font-size: 1.1rem; font-weight: 800; letter-spacing: -0.02em;
            color: #fff; display: flex; align-items: center; gap: 8px;
        }
        .lr-brand-icon {
            width: 28px; height: 28px; border-radius: 8px;
            display: flex; align-items: center; justify-content: center;
            transition: background 0.5s;
        }
        [data-side="left"] .lr-brand-icon { background: linear-gradient(135deg, #3b82f6, #1d4ed8); }
        [data-side="right"] .lr-brand-icon { background: linear-gradient(135deg, #10b981, #059669); }
        .lr-brand-icon svg { width: 16px; height: 16px; }
        .lr-nav-links { display: flex; gap: 28px; list-style: none; }
        .lr-nav-links a {
            font-size: 0.82rem; font-weight: 500; color: #71717a;
            text-decoration: none; transition: color 0.2s; letter-spacing: 0.01em;
        }
        .lr-nav-links a:hover { color: #d4d4d8; }
        .lr-nav-cta {
            padding: 8px 20px; border-radius: 10px; border: none;
            font-size: 0.82rem; font-weight: 600; font-family: inherit;
            cursor: pointer; transition: all 0.3s;
        }
        [data-side="left"] .lr-nav-cta { background: #3b82f6; color: #fff; }
        [data-side="right"] .lr-nav-cta { background: #10b981; color: #fff; }
        .lr-nav-cta:hover { transform: scale(1.05); }

        /* ===== Full page layout ===== */
        .lr-page {
            position: relative; z-index: 10;
            display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            min-height: 100vh; width: 100%; padding: 5rem 2rem 2rem;
        }

        /* Hero headline above the showcase */
        .lr-hero-text {
            text-align: center; margin-bottom: 3rem; max-width: 640px;
        }
        .lr-hero-badge {
            display: inline-flex; align-items: center; gap: 8px;
            padding: 6px 16px; border-radius: 50px;
            background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.08);
            font-size: 0.7rem; font-weight: 500; letter-spacing: 0.08em;
            text-transform: uppercase; margin-bottom: 20px;
            transition: all 0.5s;
        }
        [data-side="left"] .lr-hero-badge { color: rgba(96,165,250,0.8); border-color: rgba(59,130,246,0.15); }
        [data-side="right"] .lr-hero-badge { color: rgba(52,211,153,0.8); border-color: rgba(16,185,129,0.15); }
        .lr-hero-badge-dot {
            width: 5px; height: 5px; border-radius: 50%;
            animation: lr-dot-pulse 2s ease-in-out infinite;
            transition: background 0.5s;
        }
        [data-side="left"] .lr-hero-badge-dot { background: #3b82f6; }
        [data-side="right"] .lr-hero-badge-dot { background: #10b981; }
        @@keyframes lr-dot-pulse { 0%,100% { opacity: 1; } 50% { opacity: 0.3; } }

        .lr-hero-heading {
            font-size: clamp(2rem, 4vw, 3.2rem); font-weight: 800;
            line-height: 1.12; letter-spacing: -0.03em; margin-bottom: 14px;
        }
        .lr-hero-heading-line1 { display: block; color: #fff; }
        .lr-hero-heading-line2 {
            display: block;
            transition: all 0.5s;
        }
        [data-side="left"] .lr-hero-heading-line2 {
            background: linear-gradient(90deg, #60a5fa, #3b82f6);
            -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
        }
        [data-side="right"] .lr-hero-heading-line2 {
            background: linear-gradient(90deg, #34d399, #10b981);
            -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
        }

        .lr-hero-desc {
            font-size: 0.95rem; color: rgba(255,255,255,0.4); line-height: 1.7;
            font-weight: 300;
        }

        /* Main showcase row */
        .showcase-inner {
            display: flex; align-items: center; justify-content: center;
            gap: 5rem; max-width: 1280px; width: 100%;
            transition: flex-direction 0.6s ease;
        }
        [data-side="right"] .showcase-inner { flex-direction: row-reverse; }

        /* Product visual */
        .product-visual {
            position: relative; flex-shrink: 0;
        }
        .visual-ring {
            position: absolute; inset: -20%; border-radius: 50%;
            border: 1px dashed rgba(255,255,255,0.08);
            animation: spin-ring 20s linear infinite;
            transition: border-color 0.6s;
        }
        [data-side="left"] .visual-ring { border-left: 1px dashed rgba(59,130,246,0.35); }
        [data-side="right"] .visual-ring { border-right: 1px dashed rgba(16,185,129,0.35); }
        @@keyframes spin-ring { to { transform: rotate(360deg); } }

        .visual-glow {
            position: absolute; inset: 0; border-radius: 50%;
            filter: blur(40px); opacity: 0.35;
            transition: background 0.8s ease;
            animation: glow-pulse 4s ease-in-out infinite;
        }
        [data-side="left"] .visual-glow {
            background: linear-gradient(135deg, #2563eb, #312e81);
        }
        [data-side="right"] .visual-glow {
            background: linear-gradient(135deg, #059669, #134e4a);
        }
        @@keyframes glow-pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .visual-circle {
            position: relative;
            width: 300px; height: 300px;
            border-radius: 50%;
            border: 1px solid rgba(255,255,255,0.04);
            box-shadow: 0 25px 50px rgba(0,0,0,0.5);
            display: flex; align-items: center; justify-content: center;
            overflow: hidden;
            background: rgba(0,0,0,0.2);
            backdrop-filter: blur(4px);
        }
        .visual-circle img {
            width: 100%; height: 100%; object-fit: contain;
            padding: 16px;
            filter: drop-shadow(0 20px 50px rgba(0,0,0,0.5));
            animation: float-img 6s ease-in-out infinite;
            transition: opacity 0.35s, transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), filter 0.4s;
        }
        .img-entering {
            opacity: 0 !important; transform: scale(1.5) rotate(-30deg) translateX(-80px) !important; filter: blur(15px) !important;
        }
        [data-side="right"] .img-entering {
            transform: scale(1.5) rotate(30deg) translateX(80px) !important;
        }
        @@keyframes float-img {
            0%, 100% { transform: translateY(-10px); }
            50% { transform: translateY(10px); }
        }

        .status-pill {
            position: absolute; bottom: -32px; left: 50%; transform: translateX(-50%);
            display: flex; align-items: center; gap: 8px;
            font-size: 0.68rem; text-transform: uppercase; letter-spacing: 0.12em;
            color: #71717a; background: rgba(9,9,11,0.8); padding: 8px 16px;
            border-radius: 50px; border: 1px solid rgba(255,255,255,0.04);
            backdrop-filter: blur(8px); white-space: nowrap;
        }
        .status-dot {
            width: 6px; height: 6px; border-radius: 50%;
            animation: pulse-dot 2s ease-in-out infinite;
            transition: background 0.5s;
        }
        [data-side="left"] .status-dot { background: #3b82f6; }
        [data-side="right"] .status-dot { background: #10b981; }
        @@keyframes pulse-dot {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.4; }
        }

        /* Details panel */
        .details {
            width: 100%; max-width: 440px;
            transition: text-align 0.4s, align-items 0.4s;
        }
        [data-side="left"] .details { text-align: left; }
        [data-side="right"] .details { text-align: right; }

        .details-label {
            font-size: 0.72rem; font-weight: 600; text-transform: uppercase;
            letter-spacing: 0.18em; color: #71717a; margin-bottom: 8px;
        }
        .details-title {
            font-size: clamp(1.8rem, 3.5vw, 2.8rem); font-weight: 700;
            letter-spacing: -0.02em; margin-bottom: 12px; line-height: 1.1;
            background: linear-gradient(180deg, #fff, #71717a);
            -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
        }
        .details-desc {
            color: #a1a1aa; margin-bottom: 24px; max-width: 380px; line-height: 1.65;
            font-size: 0.9rem;
        }
        [data-side="left"] .details-desc { margin-right: auto; }
        [data-side="right"] .details-desc { margin-left: auto; }

        /* Feature card */
        .feature-card {
            width: 100%; background: rgba(24,24,27,0.5); padding: 22px;
            border-radius: 16px; border: 1px solid rgba(255,255,255,0.04);
            backdrop-filter: blur(4px);
        }
        .feature-row { margin-bottom: 18px; }
        .feature-row:last-of-type { margin-bottom: 0; }
        .feature-header {
            display: flex; align-items: center; justify-content: space-between;
            margin-bottom: 10px; font-size: 0.85rem;
        }
        [data-side="right"] .feature-header { flex-direction: row-reverse; }
        .feature-label { display: flex; align-items: center; gap: 8px; color: #d4d4d8; }
        .feature-label svg { width: 16px; height: 16px; }
        .feature-value { font-family: 'Courier New', monospace; font-size: 0.72rem; color: #71717a; }
        .feature-track {
            width: 100%; height: 6px; background: #27272a; border-radius: 99px;
            overflow: hidden; position: relative;
        }
        .feature-fill {
            position: absolute; top: 0; height: 100%; border-radius: 99px; opacity: 0.8;
            width: 0; transition: width 1s cubic-bezier(0.16, 1, 0.3, 1);
        }
        [data-side="left"] .feature-fill { left: 0; background: #3b82f6; }
        [data-side="right"] .feature-fill { right: 0; background: #10b981; }

        /* CTA buttons row in details */
        .lr-detail-cta {
            display: flex; gap: 12px; margin-top: 20px; flex-wrap: wrap;
        }
        [data-side="right"] .lr-detail-cta { justify-content: flex-end; }
        .lr-cta-primary {
            padding: 11px 26px; border-radius: 12px; border: none;
            font-size: 0.88rem; font-weight: 600; font-family: inherit;
            cursor: pointer; transition: all 0.3s;
        }
        [data-side="left"] .lr-cta-primary { background: #3b82f6; color: #fff; box-shadow: 0 4px 20px rgba(59,130,246,0.2); }
        [data-side="right"] .lr-cta-primary { background: #10b981; color: #fff; box-shadow: 0 4px 20px rgba(16,185,129,0.2); }
        .lr-cta-primary:hover { transform: scale(1.04); }
        .lr-cta-ghost {
            padding: 11px 26px; border-radius: 12px;
            background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.1);
            color: #a1a1aa; font-size: 0.88rem; font-weight: 500; font-family: inherit;
            cursor: pointer; transition: all 0.3s;
        }
        .lr-cta-ghost:hover { background: rgba(255,255,255,0.08); color: #d4d4d8; }

        .specs-link {
            display: inline-flex; align-items: center; gap: 8px;
            font-size: 0.7rem; font-weight: 600; text-transform: uppercase;
            letter-spacing: 0.08em; color: #d4d4d8; background: none; border: none;
            cursor: pointer; padding: 14px 0 0; transition: color 0.2s; font-family: inherit;
        }
        .specs-link:hover { color: #fff; }
        .specs-link:hover .specs-chevron { transform: translateX(4px); }
        .specs-link svg { width: 14px; height: 14px; }
        .specs-chevron { transition: transform 0.2s; }
        .specs-row {
            display: flex; padding-top: 14px;
        }
        [data-side="left"] .specs-row { justify-content: flex-start; }
        [data-side="right"] .specs-row { justify-content: flex-end; }

        /* Bottom switcher */
        .switcher {
            position: fixed; bottom: 36px; left: 50%; transform: translateX(-50%);
            z-index: 50; display: flex; align-items: center; gap: 4px;
            padding: 6px; border-radius: 50px;
            background: rgba(24,24,27,0.8); backdrop-filter: blur(24px);
            border: 1px solid rgba(255,255,255,0.08);
            box-shadow: 0 20px 60px rgba(0,0,0,0.6);
        }
        .sw-btn {
            position: relative; width: 96px; height: 44px; border-radius: 50px;
            display: flex; align-items: center; justify-content: center;
            font-size: 0.82rem; font-weight: 500; border: none; background: none;
            color: #71717a; cursor: pointer; font-family: inherit; transition: color 0.3s;
            -webkit-tap-highlight-color: transparent;
        }
        .sw-btn:hover { color: #a1a1aa; }
        .sw-btn.active { color: #fff; }
        .sw-btn.active::before {
            content: '';
            position: absolute; inset: 0; border-radius: 50px;
            background: linear-gradient(180deg, rgba(255,255,255,0.08), rgba(255,255,255,0.03));
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.06);
        }
        .sw-btn.active::after {
            content: '';
            position: absolute; bottom: -4px; left: 50%; transform: translateX(-50%);
            height: 3px; width: 24px; border-radius: 99px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
        }

        /* Animations */
        @@keyframes lrFadeUp { from { opacity: 0; transform: translateY(22px); } to { opacity: 1; transform: translateY(0); } }
        .lr-anim { animation: lrFadeUp 0.6s ease-out forwards; opacity: 0; }
        .lr-a1 { animation-delay: 0.1s; } .lr-a2 { animation-delay: 0.2s; }
        .lr-a3 { animation-delay: 0.35s; } .lr-a4 { animation-delay: 0.5s; }

        .fade-blur-in {
            animation: fadeBIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }
        @@keyframes fadeBIn {
            from { opacity: 0; transform: translateY(16px); filter: blur(8px); }
            to { opacity: 1; transform: translateY(0); filter: blur(0); }
        }

        @@media (max-width: 768px) {
            .lr-nav { padding: 1rem 1.5rem; }
            .lr-nav-links { display: none; }
            .showcase-inner, [data-side="right"] .showcase-inner {
                flex-direction: column !important; gap: 3rem;
            }
            .visual-circle { width: 220px; height: 220px; }
            .details { text-align: center !important; max-width: 100%; }
            .details-desc { margin-left: auto !important; margin-right: auto !important; }
            [data-side="left"] .feature-header,
            [data-side="right"] .feature-header { flex-direction: row !important; }
            [data-side="left"] .specs-row,
            [data-side="right"] .specs-row { justify-content: center !important; }
            .lr-detail-cta { justify-content: center !important; }
            [data-side="left"] .feature-fill,
            [data-side="right"] .feature-fill { left: 0 !important; right: auto !important; }
            .lr-hero-text { margin-bottom: 2rem; }
        }
    </style>
</head>

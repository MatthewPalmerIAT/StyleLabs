@page
@model Personal.Pages.Showcase.GreenLanternModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Green Lantern — Style Lab</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <style>
        *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
        html, body { width: 100%; height: 100%; overflow: hidden; font-family: 'Inter', sans-serif; background: #000; }

        .hero {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            overflow: hidden;
        }

        #glCanvas {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            display: block;
        }

        .hero-overlay {
            position: relative;
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 24px;
            max-width: 960px;
        }

        /* Badge */
        .gl-badge {
            margin-bottom: 24px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 7px 18px;
            background: rgba(255,255,255,0.07);
            backdrop-filter: blur(14px);
            border: 1px solid rgba(255,255,255,0.14);
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 0.12em;
            font-weight: 500;
        }
        .gl-badge-label {
            font-size: 0.6rem;
            letter-spacing: 0.18em;
            color: rgba(167,243,208,0.7);
            font-weight: 300;
        }
        .gl-badge-dot {
            width: 4px; height: 4px;
            border-radius: 50%;
            background: rgba(167,243,208,0.5);
        }
        .gl-badge-text {
            font-size: 0.72rem;
            letter-spacing: 0.02em;
            color: rgba(167,243,208,0.9);
            font-weight: 300;
        }

        /* Heading */
        .gl-title {
            font-size: clamp(2.5rem, 6vw, 4.5rem);
            font-weight: 300;
            letter-spacing: -0.02em;
            color: #fff;
            line-height: 1.15;
            margin-bottom: 16px;
            max-width: 820px;
        }

        /* Subtitle */
        .gl-subtitle {
            font-size: clamp(1rem, 1.8vw, 1.15rem);
            color: rgba(236,253,245,0.72);
            max-width: 640px;
            margin: 0 auto 36px;
            font-weight: 300;
            line-height: 1.7;
        }

        /* CTA buttons */
        .gl-buttons {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            gap: 14px;
        }
        .gl-btn-primary {
            padding: 13px 32px;
            background: rgba(52,211,153,0.78);
            color: #000;
            border: none;
            border-radius: 14px;
            font-size: 0.95rem;
            font-weight: 500;
            font-family: inherit;
            cursor: pointer;
            backdrop-filter: blur(12px);
            box-shadow: 0 4px 24px rgba(52,211,153,0.18);
            transition: all 0.3s;
            text-decoration: none;
        }
        .gl-btn-primary:hover {
            background: rgba(110,231,183,0.82);
            box-shadow: 0 6px 32px rgba(52,211,153,0.3);
        }
        .gl-btn-outline {
            padding: 13px 32px;
            background: transparent;
            color: #fff;
            border: 1px solid rgba(255,255,255,0.25);
            border-radius: 14px;
            font-size: 0.95rem;
            font-weight: 500;
            font-family: inherit;
            cursor: pointer;
            backdrop-filter: blur(12px);
            transition: all 0.3s;
            text-decoration: none;
        }
        .gl-btn-outline:hover {
            background: rgba(255,255,255,0.08);
            border-color: rgba(255,255,255,0.4);
        }

        /* Micro details */
        .gl-micro {
            margin-top: 32px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 22px;
            list-style: none;
        }
        .gl-micro li {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.72rem;
            font-weight: 300;
            letter-spacing: -0.01em;
            color: rgba(167,243,208,0.6);
        }
        .gl-micro-dot {
            width: 4px; height: 4px;
            border-radius: 50%;
            background: rgba(167,243,208,0.45);
        }

        /* Animations */
        @@keyframes glBlurIn {
            from { opacity: 0; filter: blur(16px); transform: translateY(20px) scale(1.04); }
            to { opacity: 1; filter: blur(0px); transform: translateY(0) scale(1); }
        }
        @@keyframes glFadeInDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @@keyframes glFadeInUp {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .anim-badge { animation: glFadeInDown 0.6s ease-out forwards; opacity: 0; }
        .anim-title { animation: glBlurIn 0.9s ease-out forwards; opacity: 0; }
        .anim-sub { animation: glFadeInUp 0.6s ease-out forwards; opacity: 0; }
        .anim-cta { animation: glFadeInUp 0.6s ease-out forwards; opacity: 0; }
        .anim-micro { animation: glFadeInUp 0.5s ease-out forwards; opacity: 0; }

        .delay-100 { animation-delay: 0.1s; }
        .delay-250 { animation-delay: 0.25s; }
        .delay-500 { animation-delay: 0.5s; }
        .delay-700 { animation-delay: 0.7s; }
        .delay-900 { animation-delay: 0.9s; }

        /* Back button */
        .gl-back {
            position: fixed; top: 1.25rem; left: 1.25rem; z-index: 20;
            display: inline-flex; align-items: center; gap: 0.5rem;
            padding: 0.55rem 1.1rem; border-radius: 99px;
            background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);
            color: rgba(255,255,255,0.6); font-size: 0.85rem; font-weight: 600;
            text-decoration: none; backdrop-filter: blur(12px); transition: all 0.25s ease;
        }
        .gl-back:hover { background: rgba(52,211,153,0.1); border-color: rgba(52,211,153,0.3); color: #6ee7b7; }
        .gl-back svg { width: 16px; height: 16px; }

        @@media (max-width: 640px) {
            .gl-buttons { flex-direction: column; align-items: center; }
            .gl-micro { flex-direction: column; align-items: center; gap: 12px; }
        }
    </style>
</head>
<body>
    <a class="gl-back" href="/Showcase/LandingPages">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/></svg>
        Back
    </a>

    <section class="hero">
        <canvas id="glCanvas"></canvas>

        <div class="hero-overlay">
            <div class="gl-badge anim-badge delay-100">
                <span class="gl-badge-label">Experience</span>
                <span class="gl-badge-dot"></span>
                <span class="gl-badge-text">WebGL Shader</span>
            </div>

            <h1 class="gl-title anim-title delay-250">
                An experiment in light, motion, and the quiet chaos between.
            </h1>

            <p class="gl-subtitle anim-sub delay-500">
                Experience a new dimension of interaction — fluid, tactile, and alive.
                Designed for creators who see beauty in motion.
            </p>

            <div class="gl-buttons anim-cta delay-700">
                <a href="#" class="gl-btn-primary" onclick="return false;">Explore the Canvas</a>
                <a href="#" class="gl-btn-outline" onclick="return false;">Learn More</a>
            </div>

            <ul class="gl-micro anim-micro delay-900">
                <li><span class="gl-micro-dot"></span>Immersive shader landscapes</li>
                <li><span class="gl-micro-dot"></span>Hand-tuned motion easing</li>
                <li><span class="gl-micro-dot"></span>Responsive, tactile feedback</li>
            </ul>
        </div>
    </section>

    <script>
    (function () {
        const canvas = document.getElementById('glCanvas');
        const gl = canvas.getContext('webgl2');
        if (!gl) return;

        function resize() {
            const dpr = Math.max(1, 0.5 * window.devicePixelRatio);
            canvas.width = window.innerWidth * dpr;
            canvas.height = window.innerHeight * dpr;
            gl.viewport(0, 0, canvas.width, canvas.height);
        }
        window.addEventListener('resize', resize);
        resize();

        const vertexSrc = `#version 300 es
        in vec4 position;
        void main() { gl_Position = position; }`;

        const fragmentSrc = `#version 300 es
        precision highp float;
        out vec4 O;
        uniform vec2 resolution;
        uniform float time;

        vec2 toPolar(vec2 p) {
            float r = length(p);
            float a = atan(p.y, p.x);
            return vec2(r, a);
        }

        void main() {
            vec2 fragCoord = gl_FragCoord.xy;
            vec2 p = 6.0 * ((fragCoord - 0.5 * resolution) / resolution.y);

            vec2 polar = toPolar(p);
            float r = polar.x;

            vec2 i = p;
            float c = 0.0;
            float u_time = time * 0.5;
            float rot = r + u_time + p.x * 0.1;

            for (float n = 0.0; n < 4.0; n++) {
                float rr = r + 0.15 * sin(u_time * 0.7 + n + r * 2.0);
                p *= mat2(
                    cos(rot - sin(u_time / 10.0)), sin(rot),
                    -sin(cos(rot) - u_time / 10.0), cos(rot)
                ) * -0.25;

                float t = r - u_time / (n + 30.0);
                i -= p + sin(t - i.y) + rr;

                c += 2.2 / length(vec2(
                    sin(i.x + t) / 0.15,
                    cos(i.y + t) / 0.15
                ));
            }

            c /= 8.0;

            vec3 baseColor = vec3(0.2, 0.7, 0.5);
            vec3 finalColor = baseColor * smoothstep(0.0, 1.0, c * 0.6);

            O = vec4(finalColor, 1.0);
        }`;

        function compile(type, source) {
            const shader = gl.createShader(type);
            gl.shaderSource(shader, source);
            gl.compileShader(shader);
            if (!gl.getShaderParameter(shader, gl.COMPILE_STATUS)) {
                console.error('Shader error:', gl.getShaderInfoLog(shader));
            }
            return shader;
        }

        const vs = compile(gl.VERTEX_SHADER, vertexSrc);
        const fs = compile(gl.FRAGMENT_SHADER, fragmentSrc);

        const program = gl.createProgram();
        gl.attachShader(program, vs);
        gl.attachShader(program, fs);
        gl.linkProgram(program);
        if (!gl.getProgramParameter(program, gl.LINK_STATUS)) {
            console.error('Link error:', gl.getProgramInfoLog(program));
        }
        gl.useProgram(program);

        const buffer = gl.createBuffer();
        gl.bindBuffer(gl.ARRAY_BUFFER, buffer);
        gl.bufferData(gl.ARRAY_BUFFER, new Float32Array([-1, 1, -1, -1, 1, 1, 1, -1]), gl.STATIC_DRAW);

        const pos = gl.getAttribLocation(program, 'position');
        gl.enableVertexAttribArray(pos);
        gl.vertexAttribPointer(pos, 2, gl.FLOAT, false, 0, 0);

        const resLoc = gl.getUniformLocation(program, 'resolution');
        const timeLoc = gl.getUniformLocation(program, 'time');

        function render(now) {
            gl.clearColor(0, 0, 0, 1);
            gl.clear(gl.COLOR_BUFFER_BIT);
            gl.uniform2f(resLoc, canvas.width, canvas.height);
            gl.uniform1f(timeLoc, now * 0.001);
            gl.drawArrays(gl.TRIANGLE_STRIP, 0, 4);
            requestAnimationFrame(render);
        }
        requestAnimationFrame(render);
    })();
    </script>
</body>
</html>
